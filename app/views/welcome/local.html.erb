<% provide(:title, 'Local de Árvores') %>
<h1>Local de Árvores</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@local, url: local_path) do |f| %>
            <%#= render 'shared/error_messages' %>
            <%= f.label :name, "Nome" %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :address, "Endereço" %>
            <button name="button" type="button" class="btn btn-primary" 
            id="my-location" style="float: right">Usar minha localização</button>
            <%= f.text_field :address, class: 'form-control' %>

            <%= f.label :latitude, "Latitude" %>
            <%= f.text_field :latitude, class: 'form-control' %>

            <%= f.label :longitude, "Longitude" %>
            <%= f.text_field :longitude, class: 'form-control' %>

            <%= f.submit "Salvar", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>